<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThoughtDef>
    <defName>BB_SleptHigherBunk</defName>
    <label>Slept in higher bunk</label>
    <description>Slept in a higher bunk; some pawns prefer the top bunk.</description>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>3</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>BB_SleptLowerBunk</defName>
    <label>Slept in lower bunk</label>
    <description>Slept in a lower bunk; slightly less preferred by some pawns.</description>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>3</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <baseMoodEffect>0</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
